@model IEnumerable<Shop_MVC.Models.UserManager.UserManagerViewModel>

@{
    ViewData["Title"] = "UserManager";
}

<h1>User Manager</h1>

<div class="container mt-4">
    @if (Model.Any())
    {
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th></th>
                    <th>Email</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Date Of Birth</th>
                    <th>Money</th>
                    <th>Role</th>
                    <th>Add Money</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int idx = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@idx)</td>
                        <td>@item.Email</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.DateOfBirth</td>
                        <td>@item.Money</td>
                        <td>@item.Role</td>
                        <td>
                            <a asp-action="AddMoney" asp-route-email="@item.Email" class="btn btn-primary btn-sm">Add Money</a>
                        </td>
                    </tr>
                    {
                        idx++;
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted text-center mt-4">No users found.</p>
    }
</div>